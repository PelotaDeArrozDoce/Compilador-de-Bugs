@model List<Compilador_de_Bugs.Models.Message>

<h2 class="titulo">Envie uma Mensagem</h2>

<form asp-action="Index" method="post" id="formulario">
    <div>
        <label for="Content"> Nome: </label><br />
        <input type="text" id="Nome" name="Nome" />
    </div>
    <div>
        <label for="Content"> Sobrenome: </label><br />
        <input type="text" id="Sobrenome" name="Sobrenome" />
    </div>
    <div>
        <label for="Content"> Telefone: </label><br />
        <input type="text" id="Phone" name="Phone" />
    </div>
    <div>
        <label for="Content"> Email: </label><br />
        <input type="text" id="Email" name="Email" />
    </div>
    <div>
        <label for="Content"> Mensagem: </label> <br />
        <input type="text" id="Content" name="Content" />
    </div>
    <br />
    <button type="submit" class="btnn">Enviar</button>
</form>

@if (Model != null && Model.Count > 0)
{
    <h3>Enviado</h3 >

}


