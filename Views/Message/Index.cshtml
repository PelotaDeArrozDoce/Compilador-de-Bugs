    background-color: #ddd;
    padding: 15px 15px 15px 15px;
    color: #333;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius:100px;    
   
}

.titulo{

    text-align: center;
    margin: 10px;
}

.btnn{
    border-radius:10px;
    padding:2px 2px 2px 2px;
}

